      "iso_checksum": "1b5a2be7d2f86dce271a76a680fcbf85d7d0a3a1f4a3bdd17ed15a34b9bbc788",
      "iso_checksum_type": "sha256",
      "boot_wait": "5s",
      "boot_command": [
