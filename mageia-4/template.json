{
  "builders": [
    {
      "boot_command": [
        "linux automatic=met:http,netw:dhcp,hos:packer,ser:mirror.internode.on.net,dir:pub/mageia/distrib/cauldron/x86_64, kickstart=http://{{ .HTTPIP }}:{{ .HTTPPort }}/auto_inst.cfg<enter><wait>"
      ],
      "boot_wait": "4s",
      "disk_size": 10140,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "ece0e1ab80dc09bac7a1d39693666b51",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirror.internode.on.net/pub/mageia/distrib/cauldron/x86_64/install/images/boot-nonfree.iso",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      },
      "scripts": [
	"scripts/kernelupgrade.sh",
        "scripts/postinstall.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": ["vagrant"]
}

